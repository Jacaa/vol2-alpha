%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    %a.navbar-brand{:href => root_path}
      %span.logo.red IT
      %span.logo.grey utor
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.mr-auto
        %li.nav-item.active
          %a.nav-link{:href => meetups_path}
            = t("meetups")
        %li.nav-item.active
          %a.nav-link{:href => top_users_path}
            = t("mentors")
        %li.nav-item.active
          %a.nav-link{:href => about_path}
            = t("about")
      - if user_signed_in?
        .nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            %button.btn.btn-outline-danger= current_user.email
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to t("profile"), user_path(current_user), class: "dropdown-item nav-item nav-link"
            = link_to t("edit_profile"), edit_user_path(current_user), class: "dropdown-item nav-item nav-link"
            = link_to t("logout"), destroy_user_session_path, method: :delete, class: "dropdown-item nav-item nav-link"
      - else
        = link_to t(:sign_up), new_user_registration_path, class: "nav-item nav-link"
        = link_to t(:login), new_user_session_path, class: "nav-item nav-link"
      %ul.nav.pull-right
        %li.nav-item.active
          - if I18n.locale == I18n.default_locale
            = link_to "PL", { :locale=>'pl' }, class: 'nav-link'
          - else
            = link_to "EN", { :locale=>'en' }, class: 'nav-link'
