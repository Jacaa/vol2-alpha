<!DOCTYPE html>
<html>
  <head>
    <title>ITutor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#"><span class='logo blue'>IT</span><span class='logo grey'>utor</span></a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">About Us <span class="sr-only">(current)</span></a>
          </li>
        </ul>

      <%# TODO: add search bar that shows up in the navbar here %>

      <% if user_signed_in? %>
      <%# TODO: user avatar goes here when we implement it %>
      <%= current_user.email %>
      <% else %>
      <%= link_to t(:sign_up), new_user_registration_path, class: "nav-item nav-link" %>
      <%= link_to t(:login), new_user_session_path, class: "nav-item nav-link" %>
      <% end %>

      </div>
    </nav>

    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
