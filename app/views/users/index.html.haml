%video#bgvid{autoplay: "autoplay", loop: "loop", muted: "muted", playsinline: "", poster: "main_video_poster.jpg"}
  %source{src: "main_video_bg.mp4", type: "video/mp4"}
.container
  .row
    .col-md-8.offset-md-2.col-12
      %h1#motto Find best technology mentors or boost your mentoring skills
      = form_tag(root_path, method: "post") do
        .row.no-gutters
          .input-group.no-gutters
            .col-9
              = text_field_tag :query, nil, placeholder: "Search for JavaScript, React in Poznan ...", class: "form-control"
            .col-3
              = submit_tag "Search", class: "btn btn-danger form-control"
